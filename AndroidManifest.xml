<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.skink.awesome7"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.skink.awesome7.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        
        <activity android:name="net.skink.awesome7.AboutActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden|orientation">
        
            <intent-filter>
                <action android:name="net.skink.awesome7.AboutActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
        </activity>
        
        <activity android:name="net.skink.awesome7.ToonActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden|orientation">
        
            <intent-filter>
                <action android:name="net.skink.awesome7.ToonActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
        </activity>

        <activity android:name="net.skink.awesome7.AnotherCalledActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden|orientation">
        
            <intent-filter>
                <action android:name="net.skink.awesome7.AnotherCalledActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
        </activity>
        
        
        
    </application>

</manifest>
